{
  "publisher": "saltand",
  "name": "completions-tester",
  "displayName": "Completions Tester",
  "version": "0.0.2",
  "private": false,
  "packageManager": "pnpm@10.4.1",
  "description": "Stress-test completion providers by repeatedly triggering, accepting, and rolling back suggestions.",
  "author": "saltand <u6a69a9@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/saltand/vscode-completer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/saltand/vscode-completer"
  },
  "bugs": {
    "url": "https://github.com/saltand/vscode-completer/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/antfu"
  },
  "keywords": [
    "completion",
    "testing",
    "ai",
    "stress"
  ],
  "categories": [
    "Testing",
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/**"
  ],
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:completions-tester.start",
    "onCommand:completions-tester.stop"
  ],
  "contributes": {
    "commands": [
      {
        "command": "completions-tester.start",
        "title": "Completions Tester: Start Loop",
        "category": "Completions Tester",
        "icon": {
          "light": "res/icons/start-light.svg",
          "dark": "res/icons/start-dark.svg"
        }
      },
      {
        "command": "completions-tester.stop",
        "title": "Completions Tester: Stop Loop",
        "category": "Completions Tester",
        "icon": {
          "light": "res/icons/end-light.svg",
          "dark": "res/icons/end-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "completions-tester.start",
          "group": "navigation@10",
          "when": "!completionsTesterRunning && (completionsTesterShowWithoutFocus || editorTextFocus)",
          "tooltip": "Start completions stress loop"
        },
        {
          "command": "completions-tester.stop",
          "group": "navigation@10",
          "when": "completionsTesterRunning && (completionsTesterShowWithoutFocus || editorTextFocus)",
          "tooltip": "Stop completions stress loop"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Completions Tester",
      "properties": {
        "completionsTester.mode": {
          "type": "string",
          "enum": [
            "both",
            "inline",
            "suggest"
          ],
          "default": "both",
          "description": "Controls which completion workflows are exercised by the loop.",
          "scope": "application"
        },
        "completionsTester.inlineTimeout": {
          "type": "number",
          "default": 1200,
          "minimum": 0,
          "description": "Milliseconds to wait after triggering inline suggestions before committing.",
          "scope": "application"
        },
        "completionsTester.suggestTimeout": {
          "type": "number",
          "default": 800,
          "minimum": 0,
          "description": "Milliseconds to wait after triggering the suggestion list before accepting the selection.",
          "scope": "application"
        },
        "completionsTester.loopDelay": {
          "type": "number",
          "default": 300,
          "minimum": 0,
          "description": "Delay between consecutive test iterations in milliseconds.",
          "scope": "application"
        },
        "completionsTester.showTitleButtonsWithoutFocus": {
          "type": "boolean",
          "default": false,
          "description": "Show the start/stop buttons even when the editor is not focused.",
          "scope": "application"
        },
        "completionsTester.pauseOnUserTyping": {
          "type": "boolean",
          "default": true,
          "description": "Pause the loop when user typing or selection changes are detected.",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "nr build",
    "pack": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@antfu/ni": "^23.3.1",
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.97.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "esno": "^4.8.0",
    "ovsx": "^0.10.5",
    "pnpm": "^10.4.1",
    "reactive-vscode": "^0.2.10",
    "tsdown": "^0.9.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vscode-ext-gen": "^1.0.0",
    "vsxpub": "^0.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
